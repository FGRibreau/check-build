{
  "checkbuild": {
    // "buddyjs"
    "enable": ["jshint", "jscs", "jsinspect", "nsp"],
    // don't exit immediately if one of the tools reports an error (default true)
    "continueOnError": true,
    // don't exit(1) even if we had some failures (default false)
    "allowFailures": false
  },
  "jshint": {
    "args": ["src/**/*.js"]
  },
  "jscs": {
    "args": ["lib/**.js"]
  },
  "jsinspect": {
    "args": ["*.js"],
    "diff": true
  },
  "buddyjs": {
    "args": ["*.js"],
    "ignore": [0, 1, 200]
  },
  "nsp": {}
}
